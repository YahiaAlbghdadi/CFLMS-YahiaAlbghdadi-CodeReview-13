{% extends 'base.html.twig' %}

{% block title %}Events index{% endblock %}

{% block body %}
<div class="container text-center align-items-center">
    <div class="btn-group m-4">
  <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    SORT EVENTS  
  </button>
  <ul class="dropdown-menu ">
    <a class="dropdown-item" href="{{ path('crud_type', {'type': "dance"}) }}">DANCING</a>
    <a class="dropdown-item" href="{{ path('crud_type', {'type': "adventure"}) }}">ADVENTURE</a>
    <a class="dropdown-item" href="{{ path('crud_type', {'type': "riding"}) }}">RIDING</a>
    <a class="dropdown-item" href="{{ path('crud_index') }}">SHOW ALL</a>
  </ul>
</div>

    <h1>OUR EVENTS</h1>

        
            {% for event in events %}
                {% if event.type == type %}
    
                <div class='main col-lg-4 col-md-6 col-sm-6 col-12'>
                    <a href=" {{ path('crud_show', {'id': event.id}) }} "><img src='{{ event.image }}' class='image m-3' alt=''></a>
                    <h6 class='location'>
                        {{ event.name }}
                    </h6>
                    <h4 class='title'>
                        {{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}
                    </h4>
                    <hr class='horz'>
                    <p class='description'>
                        {{ event.address }}
                    </p>
                </div>                        
                {% endif %}

            {% else %}
                <div>No result found</div>
            {% endfor %}

        </div>
    {% include "components/footer.html.twig" %}
{% endblock %}
