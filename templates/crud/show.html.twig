{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
<div class='container'>

    <table class="table ">

        <tbody>
                <h1>Events</h1>

            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.image }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ event.capacity }}</td>
            </tr>
            <tr>
                <th>EMail</th>
                <td>{{ event.eMail }}</td>
            </tr>
            <tr>
                <th>PhoneNr</th>
                <td>{{ event.phoneNr }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ event.address }}</td>
            </tr>
            <tr>
                <th>URL</th>
                <td>{{ event.URL }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.type }}</td>
            </tr>
        </tbody>
    </table>
    <div class"m-4">
    <a href="{{ path('crud_index') }}">back to list</a>

    <a href="{{ path('crud_edit', {'id': event.id}) }}">edit</a>

    {{ include('crud/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}
